<div class="container-fluid">
  <section class="text-center py-4">
    <h2 class="h1-responsive font-weight-bold text-center mb-5 pt-4"><%= t('.last_news') %></h2>

    <div class="row">
    <% @news.each do |item|  %>
      <div class="col-lg-4 col-md-12 mb-4">
        <!--Featured image-->
        <div class="view overlay z-depth-2 mb-2">
          <%= image_tag 'n_wal.jpg', class: 'img-fluid rounded', alt: 'First' %>
          <a>
            <div class="mask waves-effect waves-light"></div>
          </a>
        </div>

        <!--Excerpt-->
        <a href="" class="amber-text">
          <h6 class="mb-3 mt-4">
            <%= icon('folder-open') %>
            <strong> <%= item.category.title %></strong>
          </h6>
        </a>
        <h4 class="mb-3 font-weight-bold dark-grey-text">
          <strong><%= item.title %></strong>
        </h4>
        <p>by
          <a class="font-weight-bold dark-grey-text"><%= item.author.email %></a>, <%= item.created_at %></p>
        <p class="grey-text"><%= item.description %></p>
        <%= link_to t('.read_more'), article_path(item), class: "btn btn-amber btn-rounded btn-md waves-effect waves-light" %>
      </div>
    <% end %>
    </div>
  </section>
</div>
